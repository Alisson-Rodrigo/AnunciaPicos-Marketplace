    <main class="conteudo-principal" id="conteudo">
        <div id="barraDeBusca">
            <input type="text" id="inputBusca" placeholder="Buscar produtos..." />
            <button id="btnBuscar">Buscar</button>
        </div>

        <div class="grid-produtos" id="produtosContainer"></div>

