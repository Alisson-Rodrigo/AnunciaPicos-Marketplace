@page "/favoritos"

<NavBar />

<head>
    <style>
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .favorites-title {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 30px;
            color: #2c3e50;
            border-bottom: 3px solid #6f42c1;
            padding-bottom: 10px;
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        }

        .table-header {
            padding: 18px 20px;
            background: linear-gradient(135deg, #6f42c1, #8b5fbf);
            color: white;
            font-weight: 600;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
        }

        .table-row {
            transition: all 0.3s ease;
            border-bottom: 1px solid #e9ecef;
        }

        .table-row:hover {
            background-color: #f8f9ff;
            transform: translateY(-1px);
        }

        .table-row:last-child {
            border-bottom: none;
        }

        .table-cell {
            padding: 20px;
            vertical-align: middle;
        }

        .product-details {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .product-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 12px;
            border: 2px solid #e9ecef;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            flex-shrink: 0;
        }

        .product-image:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
        }

        .product-info {
            flex: 1;
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 20px;
            min-height: 100px;
        }

        .product-text {
            flex: 1;
        }

        .product-name {
            font-weight: 600;
            font-size: 18px;
            color: #2c3e50;
            line-height: 1.3;
            margin-bottom: 4px;
        }

        .product-description {
            font-size: 14px;
            color: #6c757d;
            line-height: 1.4;
            margin: 0;
        }

        .price {
            font-size: 20px;
            font-weight: 700;
            color: #27ae60;
        }

        .button {
            padding: 12px 24px;
            background: linear-gradient(135deg, #6f42c1, #8b5fbf);
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            display: inline-block;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 8px rgba(111, 66, 193, 0.3);
        }

        .button:hover {
            background: linear-gradient(135deg, #5a32a3, #6f42c1);
            transform: translateY(-2px);
            box-shadow: 0 4px 16px rgba(111, 66, 193, 0.4);
            color: white;
        }

        .remove-button {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            border: none;
            border-radius: 8px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(231, 76, 60, 0.3);
        }

        .remove-button:hover {
            background: linear-gradient(135deg, #c0392b, #a93226);
            transform: translateY(-2px) scale(1.1);
            box-shadow: 0 4px 16px rgba(231, 76, 60, 0.4);
        }

        .remove-icon {
            color: white;
            font-size: 18px;
            font-weight: bold;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #6c757d;
        }

        .empty-state-icon {
            font-size: 48px;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .empty-state-text {
            font-size: 18px;
            margin-bottom: 8px;
        }

        .empty-state-subtext {
            font-size: 14px;
            opacity: 0.7;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="favorites-title">Meus Favoritos</div>

        <table class="table">
            <thead>
                <tr>
                    <th class="table-header" style="width: 55%">Produtos</th>
                    <th class="table-header" style="width: 18%">Pre√ßo</th>
                    <th class="table-header" style="width: 20%">A√ß√£o</th>
                    <th class="table-header" style="width: 7%"></th>
                </tr>
            </thead>
            <tbody id="favorites-body">
                <!-- Produtos favoritos ser√£o inseridos aqui via JS -->
            </tbody>
        </table>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const token = localStorage.getItem("authToken");

            if (!token) {
                alert("Voc√™ precisa estar logado para ver seus favoritos.");
                return;
            }

            try {
                const response = await fetch("https://api.anunciapicos.shop/favorite", {
                    headers: {
                        "Authorization": `Bearer ${token}`
                    }
                });

                if (!response.ok) {
                   
                    return;
                }

                const favoritos = await response.json();
                const tbody = document.getElementById("favorites-body");
                tbody.innerHTML = "";

                if (!favoritos || favoritos.length === 0) {
                    tbody.innerHTML = `
                        <tr>
                            <td colspan="4" class="table-cell">
                                <div class="empty-state">
                                    <div class="empty-state-icon">üíú</div>
                                    <div class="empty-state-text">Nenhum favorito ainda</div>
                                    <div class="empty-state-subtext">Adicione produtos aos seus favoritos para v√™-los aqui</div>
                                </div>
                            </td>
                        </tr>
                    `;
                    return;
                }

                favoritos.forEach(produto => {
                    const imagemUrl = (produto.imageUrl && produto.imageUrl.length > 0)
                        ? produto.imageUrl[0]
                        : 'https://via.placeholder.com/100x100/e9ecef/6c757d?text=Sem+Imagem';

                    const row = document.createElement("tr");
                    row.classList.add("table-row");

                    row.innerHTML = `
                        <td class="table-cell">
                            <div class="product-details">
                                <img src="${imagemUrl}" alt="${produto.name}" class="product-image" onerror="this.src='https://via.placeholder.com/100x100/e9ecef/6c757d?text=Erro'">
                                <div class="product-info">
                                    <div class="product-text">
                                        <div class="product-name">${produto.name}</div>
                                        <div class="product-description">${produto.description || "Produto sem descri√ß√£o dispon√≠vel"}</div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="table-cell">
                            <div class="price">R$ ${produto.price?.toFixed(2).replace('.', ',') ?? "0,00"}</div>
                        </td>
                        <td class="table-cell">
                            <button class="button" onclick="window.location.href='/visualizarproduto?id=${produto.id}'">Ver Produto</button>
                        </td>
                        <td class="table-cell">
                            <button class="remove-button" onclick="removerFavorito(${produto.id})" title="Remover dos favoritos">
                                <span class="remove-icon">√ó</span>
                            </button>
                        </td>
                    `;

                    tbody.appendChild(row);
                });

            } catch (error) {
                console.error("Erro ao buscar favoritos:", error);
                alert("Erro inesperado ao carregar favoritos.");
            }
        });

       async function removerFavorito(id, clickedElement) {
    // clickedElement √© o elemento que foi clicado (ex: o bot√£o "remover")
    const token = localStorage.getItem("authToken");

    // Confirma√ß√£o com o usu√°rio
    if (!confirm("Tem certeza que deseja remover este produto dos seus favoritos?")) {
        return; // Usu√°rio cancelou
    }

    let rowToRemove = null;
    // Tenta encontrar a linha da tabela (elemento .table-row) mais pr√≥xima do bot√£o clicado
    if (clickedElement) {
        rowToRemove = clickedElement.closest('.table-row');
    }

    try {
        const response = await fetch(`https://api.anunciapicos.shop/favorite/${id}`, {
            method: "DELETE",
            headers: {
                "Authorization": `Bearer ${token}`,
                // "Content-Type": "application/json" // Geralmente n√£o necess√°rio para DELETE sem corpo, mas n√£o prejudica.
            }
        });

        // --- Para Depura√ß√£o ---
        console.log("Resposta completa do servidor:", response);
        console.log("Status da resposta:", response.status);
        console.log("Propriedade 'ok' da resposta:", response.ok);
        // ---------------

        if (response.ok) { // Entra aqui se o status HTTP for 200-299
            if (rowToRemove) {
                // Aplica estilos para anima√ß√£o de sa√≠da
                // Garanta que a transi√ß√£o esteja definida no seu CSS para .table-row ou defina aqui:
                rowToRemove.style.transition = 'opacity 0.3s ease-out, transform 0.3s ease-out';
                rowToRemove.style.opacity = '0';
                rowToRemove.style.transform = 'translateX(-100%)';

                // Espera a anima√ß√£o terminar para remover o elemento da DOM
                setTimeout(() => {
                    rowToRemove.remove();
                    // Opcional: Exibir uma notifica√ß√£o de sucesso n√£o bloqueante (toast)
                    // ex: mostrarNotificacao("Favorito removido com sucesso!");
                }, 300); // Deve ser igual √† dura√ß√£o da transi√ß√£o CSS
            } else {
                // Fallback: se n√£o encontrar a linha para remover, recarrega a p√°gina
                // Isso pode acontecer se 'clickedElement' n√£o for passado ou a estrutura do HTML for inesperada
                alert("Favorito removido com sucesso! A lista ser√° atualizada.");
                location.reload();
            }
        } else {
            // Se response.ok for false (status fora de 200-299)
            let errorMessage = `Erro ao remover favorito (Status: ${response.status})`;
            try {
                // Tenta ler o corpo da resposta para uma mensagem de erro mais detalhada
                const errorData = await response.json(); // Tenta parsear como JSON
                if (errorData && (errorData.message || errorData.error)) {
                    errorMessage += `: ${errorData.message || errorData.error}`;
                }
            } catch (e) {
                // Se n√£o for JSON ou o corpo estiver vazio, usa o statusText se dispon√≠vel
                if (response.statusText) {
                    errorMessage += `: ${response.statusText}`;
                }
                console.warn("N√£o foi poss√≠vel parsear a resposta de erro como JSON, ou o corpo estava vazio.", e);
            }
            alert(errorMessage);
        }
    } catch (error) {
        // Erro de rede ou algum outro erro que impediu a requisi√ß√£o de ser completada
        console.error("Erro cr√≠tico ao tentar remover favorito (bloco catch):", error);
        alert("Erro de conex√£o ou inesperado ao tentar remover o favorito. Verifique sua internet e tente novamente.");
    }
}
    </script>

</body>
